generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  fullName  String
  username  String     @unique
  gender    GenderEnum
  role      RoleEnum
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  owner     Owner?
  manager   Manager?
}

model Owner {
  id   String @id
  user User   @relation(fields: [id], references: [id])
  cafe Cafe[]
}

model Manager {
  id     String  @id
  user   User    @relation(fields: [id], references: [id])
  cafe   Cafe?   @relation(fields: [cafeId], references: [id])
  cafeId String?
}

model Cafe {
  id        String   @id @default(uuid())
  name      String
  address   String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  owner     Owner?   @relation(fields: [ownerId], references: [id])
  ownerId   String?

  menu    Menu[]
  manager Manager[]
}

model Menu {
  id            String   @id @default(uuid())
  name          String
  price         Float
  isRecommended Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  cafe          Cafe[]
}

enum GenderEnum {
  UNKNOWN
  MALE
  FEMALE
}

enum RoleEnum {
  SUPER_ADMIN
  MANAGER
  OWNER
}
